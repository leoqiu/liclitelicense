<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<TableRow>
	    <TextView
		    android:id="@+id/server_feature_name_label"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Name: " />
	    <TextView
	        android:id="@+id/server_feature_name_value"
	        android:layout_width="wrap_content"
	        android:textColor="#DF0101"
	        android:layout_height="wrap_content" />
	</TableRow>

	<TableRow>
	    <TextView
		    android:id="@+id/server_feature_num_issue_label"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Num issued: " />
	    <TextView
	        android:id="@+id/server_feature_num_issue_value"
	        android:layout_width="wrap_content"
	        android:textColor="#DF0101"
	        android:layout_height="wrap_content" />
	</TableRow>
	
	<TableRow>
	    <TextView
		    android:id="@+id/server_feature_num_in_used_label"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Num in used: " />
	    <TextView
	        android:id="@+id/server_feature_num_in_used_value"
	        android:layout_width="wrap_content"
	        android:textColor="#DF0101"
	        android:layout_height="wrap_content" />
	</TableRow>
    
</TableLayout>